@page
@model SolarEclipse.Pages.Volunteers.CreateModel

@{
    ViewData["Title"] = "Volunteer";
}

<h1>Volunteer</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Volunteer.FirstName" class="control-label"></label>
                <input asp-for="Volunteer.FirstName" class="form-control" />
                <span asp-validation-for="Volunteer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.LastName" class="control-label"></label>
                <input asp-for="Volunteer.LastName" class="form-control" />
                <span asp-validation-for="Volunteer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Email" class="control-label"></label>
                <input asp-for="Volunteer.Email" class="form-control" />
                <span asp-validation-for="Volunteer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Position" class="control-label"></label>
                <select asp-for="Volunteer.VolunteerPositionID" class="form-control" 
                        asp-items="@Model.VolunteerPositionNameSL">
                    <option value="">-- Select Position --</option>
                </select>
                <span asp-validation-for="Volunteer.Position" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/VolunteerPositions/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
